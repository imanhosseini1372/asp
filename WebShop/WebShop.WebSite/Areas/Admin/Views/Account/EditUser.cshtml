@{
    ViewData["Title"] = "ویرایش کاربر";
}
@model UserDto
<div class="container">

    <h4>ویرایش کاربر </h4>

    <form asp-action="EditUser" class="form-signin" method="post">
        <input asp-for="Id" type="hidden" class="form-control">
        <input asp-for="Password" type="hidden" class="form-control">
        <div class="form-group">
            <input asp-for="UserName" type="text" class="form-control" placeholder="نام کاربری" autofocus>
        </div>
        <div class="form-group">
            <input asp-for="FullName" type="text" class="form-control" placeholder="نام" autofocus>
        </div>
        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control" placeholder="ایمیل ">
        </div>
        <div class="form-group">
            <input asp-for="Mobile" type="number" class="form-control" placeholder="موبایل ">
        </div>
        <div class="form-group">
            <div class="form-group">
                <label class="col-sm-2 control-label">نقش کاربر</label>
                <div class="col-sm-10">
                    <select name="RoleId" class="form-control" required>
                        <option value=@Model.RoleId> @Model.RoleTitle</option>
                        @foreach (RoleDto item in ViewBag.Role)
                        {
                            <option value="@item.RoleId">@item.RoleTitle</option>
                        }


                    </select>
                </div>
            </div>
        </div>


        <button class=" btn btn-lg btn-success " type="submit">
            ویرایش
        </button>
        <div asp-validation-summary="All" class="text-danger"></div>


    </form>
</div>